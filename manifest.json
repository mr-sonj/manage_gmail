{
    "manifest_version": 3,
    "name": "Manage Gmail",
    "version": "1.0",
    "description": "",
    "author": "Sonjj.com",
    
    "action": {
        "default_title": "Dashboard",
        "default_popup": "index.html"
    },

    "icons": {
        "20": "icons/logo-20.png",
        "25": "icons/logo-25.png",
        "48": "icons/logo-48.png"
    },
    
    "host_permissions": [
        "*://*/*"
    ],
    "permissions": [
        "activeTab",
        "idle",
        "notifications",
        "contextMenus",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "browsingData"
    ],
    "content_scripts": [ 
        {
            "matches": ["<all_urls>"],
            "js": ["content_scripts/bililiteRange.js", "content_scripts/jSozi.js",  "content_scripts/test.js"]
        }
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://music.yandex.ru/; "
    }
}